@model ADSProject.Models.ProfesorViewModel

@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Form</h1>

<h4>ProfesorViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <input type="hidden" id="operacion" value="@ViewData["Operaciones"]" />
        <input type="hidden" id="_redirectURL" value="@Url.Action("Index", "Profesor")" />
        <form asp-action="Form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input asp-for="idProfesor" class="form-control" type="hidden" />

            </div>
            <div class="form-group">
                <label asp-for="nombreProfesor" class="control-label"></label>
                <input asp-for="nombreProfesor" class="form-control" />
                <span asp-validation-for="nombreProfesor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="apellidoProfesor" class="control-label"></label>
                <input asp-for="apellidoProfesor" class="form-control" />
                <span asp-validation-for="apellidoProfesor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="correoEstudiante" class="control-label"></label>
                <input asp-for="correoEstudiante" class="form-control" />
                <span asp-validation-for="correoEstudiante" class="text-danger"></span>
            </div>
            <input type="checkbox" asp-for="estado" value="true" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    $(document).ready(function () {
        // Cuando la operacion sobre el formulario es de lectura.
        if ($("#operacion").val() == "leer") {
            $("form").find("input,select").attr("disabled", true);
        }
     });
        // agregando ajax
        $("form").addClass("form-ajax");
        // activando ajax
    initAjaxForm();

</script>

}
