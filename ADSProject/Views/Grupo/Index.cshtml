@model IEnumerable<ADSProject.Models.GrupoViewModel>
@using ADSProject.Utils

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-6">
                <h3>Grupos</h3>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-success d-block" asp-action="Form"
                   asp-route-operaciones="@Operaciones.agregar">Agregar Grupo</a>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.idGrupo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.idCarrera)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.idMateria)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.idProfesor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ciclo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.anio)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.idGrupo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Carreras.NombreCarrera)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Materias.nombreMateria)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Profesores.nombreProfesor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ciclo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.anio)
                            </td>
                            <td>
                                <a class="btn btn-primary"
                                   asp-route-iGrupo="@item.idGrupo"
                                   asp-action="Form"
                                   asp-route-operaciones="@Operaciones.modificar">Modificar</a>
                                <a class="btn btn-warning"
                                   asp-route-idGrupo="@item.idGrupo"
                                   asp-action="Form"
                                   asp-route-operaciones="@Operaciones.leer">Leer</a>
                                <a class="btn btn-danger eliminar"
                                   asp-route-idGrupo="@item.idGrupo"
                                   asp-action="Delete">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h3 class="text-center">Lista vacia.</h3>
        }

    </div>

</div>


